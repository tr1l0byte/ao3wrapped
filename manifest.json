{
  "manifest_version": 3,
  "name": "AO3 Wrapped",
  "version": "1.0",
  "description": "Track and visualize your AO3 reading habits.",
  "permissions": ["storage"],
  "host_permissions": ["https://archiveofourown.org/*"],
  "content_scripts": [
    {
      "matches": ["https://archiveofourown.org/works/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}